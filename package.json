{
  "name": "@vcsuite/ui-components",
  "version": "0.1.8",
  "type": "module",
  "description": "Vuetify based UI components.",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "coverage:gitlab": "vitest run --coverage --reporter junit --outputFile test-report.xml",
    "lint": "eslint \"{src,tests}/**/*.{js,vue}\"",
    "docs": "jsdoc -c build/jsdocConfig.json"
  },
  "files": [
    "index.js",
    "src/"
  ],
  "peerDependencies": {
    "@mdi/font": "^5.9.55",
    "@vcsuite/check": "^1.1.1",
    "@vcsuite/logger": "^1.0.1",
    "@vue/composition-api": "^1.3.3",
    "rxjs": "^6.6.6",
    "vue": "^2.6.14",
    "vuetify": "^2.6.3"
  },
  "devDependencies": {
    "@vcsuite/eslint-config": "^2.1.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/test-utils": "^1.3.0",
    "c8": "^7.11.0",
    "eslint": "^8.9.0",
    "jsdoc": "^3.6.7",
    "jsdoc-vuejs": "^4.0.0",
    "jsdom": "^19.0.0",
    "sass": "1.32.13",
    "unplugin-vue-components": "^0.17.18",
    "vite": "^2.8.4",
    "vite-plugin-vue2": "^1.9.3",
    "vitest": "^0.4.1",
    "vue": "^2.6.14",
    "vuetify": "^2.6.3"
  },
  "eslintConfig": {
    "extends": [
      "@vcsuite/eslint-config/vue"
    ],
    "rules": {
      "jsdoc/check-tag-names": [
        "error",
        {
          "definedTags": [
            "vue-prop",
            "vue-data",
            "vue-computed",
            "vue-event"
          ]
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "author": "virtualcitysystems GmbH",
  "license": "ISC"
}
